<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>食品概要</h3>
      <%= image_tag @food_detail["mediumImageUrls"][0], class: "food-image" %><br>
    </div>
    <div class="col-md-9">
      <%= @food_detail['itemCaption'] %>
    </div>
  </div>

  <% if @food_exist.nil? %>
    <%= render 'food_name', food: @food %>
  <% else %>
    <h4>品名</h4>
    <h5><%= @food_exist.name %></h5><br>
    <%= render 'comment_index', comments: @comments %>
    <div align="right">
      <%= link_to'選択したコメントを削除', admin_food_comment_path(@comments), method: :delete, data: {confirm: '本当に削除してもよろしいですか？'}, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>