<div class="conteiner">
  <div class="row">
    <div class="col-2 offset-2">
      <h5 class="bg-light text-center my-5 ml-4">ユーザー一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-7 mx-auto">
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th>ユーザーID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
             <td><%= user.id %></td>
             <td>
               <%= link_to admin_user_path(user), class: "text-blue" do %>
                <% user.name %>
               <% end %>
             </td>
             <td>
               <%= user.email %>
             </td>
             <td>
               <%if user.is_deleted == false %>
                <span class="text-success font-weight-bold">有効ユーザー</span>
               <% else %>
                <span class="text-secondar font-weght-bold">退会</span>
               <% end %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col offset-5"><%= paginate @users %></div>
    </div>
  </div>

</div>