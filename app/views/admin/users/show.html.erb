<div class= "container">
  <div class="row">
    <div class="col-4 mb-5 offset-1">
      <h5 class="bg-light text-center mt-3"><%= @user.name %>さんの<br>
      ユーザー情報</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mb-2 mx-auto">
      <table class="table">
        <tr>
          <th>ユーザーID</th>
          <th><%= @user.id %></th>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>ユーザーステータス</th>
          <th>
            <% if @user.is_deleted == false %>
             <p class="text-success">有効</p>
            <% else %>
             <p class="text-secondary">退会</p>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-7">
      <tr class="text-center">
        <th><%= link_to "編集", edit_admin_user_path, class: "btn btn-success" %></th>
      </tr>
    </div>
  </div>

</div>