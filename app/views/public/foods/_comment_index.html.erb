<h5><strong>コメント一覧</strong></h5>
    <% comments.each do |comment| %>
      <div>
        <font size = "2"><%= l comment.user.created_at, format: :short %></font><br>
        <font size = "2"><%= comment.user.name %></font><br>
        <%= comment.impression %>
      </div>
        <div id="star-rate-<%= comment.id %>"></div>
          <script>
            $('#star-rate-<%= comment.id %>').raty({
            　size: 30,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              score: <%= comment.rate %>,
              readOnly: true
            });
          </script>
        <h5 class="mb-3">評価：<%= comment.rate %>点 </h5>
    <% end %>