<div class="container">
  <div class="row">
    <div class="col">
      <h4>マイページ</h4><br>
    </div>
  </div>
  <div class="row">
    <%= image_tag @user.get_profile_image(100, 100) %>
    <table class="table">
      <tbody>
        <tr>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @user.email %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>編集する
    <% end %>
  </div>
</div>